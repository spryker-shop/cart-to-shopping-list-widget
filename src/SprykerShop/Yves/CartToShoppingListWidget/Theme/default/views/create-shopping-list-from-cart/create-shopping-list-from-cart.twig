{% extends template('page-layout-main') %}

{% if _widget is defined %}
    {% set viewForm = _widget.form %}
{% else %}
    {% set viewForm = _view.form %}
{% endif %}

{% define data = {
    form: viewForm,
    labels: {
        submitLabel: 'cart.add-to-shopping-list' | trans
    }
} %}

{% block body %}
    {% include molecule('form') with {
        data: {
            form: data.form,
            submit: {
                enable: true,
                text: data.labels.submitLabel
            }
        }
    } only %}
{% endblock %}
