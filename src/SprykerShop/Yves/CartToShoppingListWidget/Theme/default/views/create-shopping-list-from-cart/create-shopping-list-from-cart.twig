{% extends template('widget') %}

{% if _widget is defined %}
    {% set viewForm = _widget.form %}
{% else %}
    {% set viewForm = _view.form %}
{% endif %}

{% define data = {
    form: viewForm,
    formAction: url('shopping-list/create-from-cart'),
    labels: {
        formLabel: 'cart.add-to-shopping-list.form' | trans,
        submitLabel: 'cart.add-to-shopping-list' | trans
    }
} %}

{% block body %}
    <hr>
    {% include molecule('form') with {
        data: {
            options: {
                action: data.formAction
            },
            title: data.labels.formLabel,
            form: data.form,
            submit: {
                enable: true,
                text: data.labels.submitLabel
            }
        }
    } only %}
{% endblock %}
